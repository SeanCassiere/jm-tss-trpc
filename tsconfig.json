{
  "compilerOptions": {
    "module": "Preserve",
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "isolatedModules": true,
    "allowJs": true,
    "noErrorTruncation": true,

    "jsx": "react-jsx",
    "types": ["vite/client"],

    "strict": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
